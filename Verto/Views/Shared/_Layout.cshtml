<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Verto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Verto.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
</head>
<body>
    <header>
        <nav class="bg-white shadow-md py-4">
            <div class="container mx-auto flex justify-between items-center px-6">
                <!-- Logo -->
                <img src="~/images/logo.png" alt="Logo" class="h-10" />

                <!-- Navbar Toggler for Mobile -->
                <button id="nav-toggler" class="lg:hidden p-2 text-gray-800 border border-gray-300 rounded-md">
                    ☰
                </button>

                <div class="flex lg:flex-row space-x-8 lg:flex">
                    <a class="text-gray-800 hover:text-yellow-500" asp-area="" asp-controller="Admin" asp-action="EditHomePage">Admin</a>
                    <div class="text-gray-800 hover:text-yellow-500">Services</div>
                    <div class="text-gray-800 hover:text-yellow-500">Sustainability</div>
                    <div class="text-gray-800 hover:text-yellow-500">Our Work</div>
                    <div class="text-gray-800 hover:text-yellow-500">Resources</div>
                    <div class="text-gray-800 hover:text-yellow-500">About IOTA</div>
                    <div class="text-gray-800 hover:text-yellow-500">Get in Touch</div>
                    <img style="w-auto" src="~/images/search.png" alt="Search Icon" />
                </div>


            </div>
        </nav>
    </header>

    <!-- Mobile Menu (Hidden by default) -->
    <div id="mobile-menu" class="lg:hidden hidden fixed top-0 left-0 bg-white shadow-lg z-50 p-4">
        <ul>
            <li><a href="#" class="block py-2 text-gray-800 hover:text-yellow-500">Home</a></li>
            <li><a href="#" class="block py-2 text-gray-800 hover:text-yellow-500">Services</a></li>
            <li><a href="#" class="block py-2 text-gray-800 hover:text-yellow-500">Sustainability</a></li>
            <li><a href="#" class="block py-2 text-gray-800 hover:text-yellow-500">Our Work</a></li>
            <li><a href="#" class="block py-2 text-gray-800 hover:text-yellow-500">Resources</a></li>
            <li><a href="#" class="block py-2 text-gray-800 hover:text-yellow-500">About IOTA</a></li>
            <li><a href="#" class="block py-2 text-gray-800 hover:text-yellow-500">Get in Touch</a></li>
            <li><a href="#" class="block py-2 text-gray-800 hover:text-yellow-500">Search</a></li>
        </ul>
    </div>

    <!-- JavaScript for Toggling Menu -->
    <script>
        const navToggler = document.getElementById('nav-toggler');
        const mobileMenu = document.getElementById('mobile-menu');

        navToggler.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="bg-[#333333] text-white py-8">
        <div class="container mx-auto px-6">
            <div class="flex justify-between items-center">
                <div class="text-sm">
                    &copy; 2025 - Verto
                </div>
                <div class="text-sm">
                    <a href="/" class="hover:text-teal-400">Home</a>
                </div>
            </div>
            <div class="mt-4 text-center text-sm text-gray-400">
                Designed by Lukas
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
