@model HomePageContent

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Homepage</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/foundation-sites/dist/css/foundation.min.css">
</head>
<body>
    <div class="container">
        <h1>Edit Homepage Content</h1>
        <form method="post" asp-action="ResetHomePage">
            <button type="submit" class="btn btn-danger">Reset Homepage</button>
        </form>

        <form method="post" enctype="multipart/form-data">
            <div class="grid-x grid-padding-x">
                <div class="cell small-12 medium-6">
                    <label for="Title">Title</label>
                    <input type="text" id="Title" name="Title" value="@Model.Title" required>
                </div>
                <div class="cell small-12 medium-6">
                    <label for="Description">Description</label>
                    <textarea id="Description" name="Description" required>@Model.Description</textarea>
                </div>
            </div>

            <div class="grid-x grid-padding-x">
                <div class="cell small-12 medium-6">
                    <label for="MainImage">Main Image</label>
                    <input type="file" id="MainImage" name="MainImage">
                </div>
            </div>

            <div class="grid-x grid-padding-x">
                <div class="cell small-12 medium-4">
                    <label for="ExploreImage1">Explore Image 1</label>
                    <input type="file" id="ExploreImage1" name="ExploreImage1">
                </div>
                <div class="cell small-12 medium-4">
                    <label for="ExploreImage2">Explore Image 2</label>
                    <input type="file" id="ExploreImage2" name="ExploreImage2">
                </div>
                <div class="cell small-12 medium-4">
                    <label for="ExploreImage3">Explore Image 3</label>
                    <input type="file" id="ExploreImage3" name="ExploreImage3">
                </div>
            </div>

            <div class="grid-x grid-padding-x">
                <div class="cell small-12 medium-3">
                    <label for="FeatureImage1">Feature Image 1</label>
                    <input type="file" id="FeatureImage1" name="FeatureImage1">
                </div>
                <div class="cell small-12 medium-3">
                    <label for="FeatureImage2">Feature Image 2</label>
                    <input type="file" id="FeatureImage2" name="FeatureImage2">
                </div>
                <div class="cell small-12 medium-3">
                    <label for="FeatureImage3">Feature Image 3</label>
                    <input type="file" id="FeatureImage3" name="FeatureImage3">
                </div>
                <div class="cell small-12 medium-3">
                    <label for="FeatureImage4">Feature Image 4</label>
                    <input type="file" id="FeatureImage4" name="FeatureImage4">
                </div>
            </div>

            <div class="grid-x grid-padding-x">
                <div class="cell small-12">
                    <label for="DiscoverImage">Discover Image</label>
                    <input type="file" id="DiscoverImage" name="DiscoverImage">
                </div>
            </div>

            <button type="submit" class="button" style="background-color: #DDB62E; border-radius: 5px;">Save Changes</button>
        </form>
    </div>
</body>
</html>
