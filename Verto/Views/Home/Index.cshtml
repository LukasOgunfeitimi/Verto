@model HomePageContent

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/foundation-sites/dist/css/foundation.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:wght@400;700&family=DM+Serif+Display&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
</head>
<body>
    <header>
        <section>
            <div class="slider">
                <div>
                    <h2>@Model.SliderTitle1</h2>
                    <p>@Model.SliderDesc1</p>
                </div>
                <div>
                    <h2>@Model.SliderTitle2</h2>
                    <p>@Model.SliderDesc2</p>
                </div>
                <div>
                    <h2>@Model.SliderTitle3</h2>
                    <p>@Model.SliderDesc3</p>
                </div>
            </div>

        </section>

        <section class="bg-light-grey side-by-side grid-container">
            <div class="grid-x grid-padding-x align-middle">
                <div class="cell medium-6">
                    <img src="@Model.CircleIconsImage" alt="Side-by-side Image">
                </div>
                <div class="cell medium-6">
                    <h2 class="dark-blue">@Model.Title</h2>
                    <p>@Model.Description</p>
                    <button class="button" style="background-color: #DDB62E; border-radius: 5px;">WHAT WE DO</button>

                </div>
            </div>
        </section>

        <section>
            <div class="dark-blue mt-7 mb-4" style="display: flex; justify-content: center;">Explore our latest work...</div>
            <div class="explore-images grid-x grid-padding-x">
                <div class="cell small-12 medium-4">
                    <img src="@Model.ExploreImage1" alt="Explore Image 1">
                </div>
                <div class="cell small-12 medium-4">
                    <img src="@Model.ExploreImage2" alt="Explore Image 2">
                </div>
                <div class="cell small-12 medium-4">
                    <img src="@Model.ExploreImage3" alt="Explore Image 3">
                </div>
            </div>
        </section>

        <section>
            <div class="bg-dark-blue feature-images grid-x grid-padding-x">
                <div class="cell small-12 medium-3">
                    <img src="@Model.FeatureImage1" alt="Feature Image 1">
                </div>
                <div class="cell small-12 medium-3">
                    <img src="@Model.FeatureImage2" alt="Feature Image 2">
                </div>
                <div class="cell small-12 medium-3">
                    <img src="@Model.FeatureImage3" alt="Feature Image 3">
                </div>
                <div class="cell small-12 medium-3">
                    <img src="@Model.FeatureImage4" alt="Feature Image 4">
                </div>
            </div>
            <div class="grid-x">
                <div class="cell">
                    <img src="@Model.DiscoverImage" alt="Discover Image">
                </div>
            </div>
        </section>
    </header>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/what-input@5.2.10/dist/what-input.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/foundation-sites/dist/js/foundation.min.js"></script>

    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

    <script>
        // Initialize Foundation
        $(document).foundation();

        // Initialize Slick carousel
        $(document).ready(function(){
            $('.slider').slick({
                dots: true,
                infinite: true,
                speed: 500,
                fade: true,
                cssEase: 'linear'
            });
        });
    </script>
</body>
</html>
